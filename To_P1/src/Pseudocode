				set int odds equal to ddigits[0]
				set ddigits[0] equal to ddigits[2]
				set ddigits[2] equal to odds

				set int evens equal to ddigits[1]
				set ddigits[1] equal to ddigits[3]			
				set ddigits[3] equal to evens
			
				Create for loop until i equals 4
